<Window x:Class="EnhancedFileExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enhanced File Explorer" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Name="MainToolBar">
            <Button Name="UpButton" Content="↑" ToolTip="Go Up" Click="UpButton_Click"/>
            <Button Name="BackButton" Content="←" ToolTip="Go Back" Click="BackButton_Click"/>
            <Button Name="ForwardButton" Content="→" ToolTip="Go Forward" Click="ForwardButton_Click"/>
            <Separator/>
            <Button Name="RefreshButton" Content="↻" ToolTip="Refresh" Click="RefreshButton_Click"/>
            <Separator/>
            <Button Name="UndoButton" Content="↶" ToolTip="Undo" Click="UndoButton_Click"/>
            <Button Name="RedoButton" Content="↷" ToolTip="Redo" Click="RedoButton_Click"/>
            <Separator/>
            <TextBox Name="AddressBar" MinWidth="300" KeyDown="AddressBar_KeyDown"/>
            <Separator/>
            <Button Name="NewTabButton" Content="+" ToolTip="New Tab" Click="NewTabButton_Click"/>
        </ToolBar>

        <!-- Main Content Area -->
        <TabControl Grid.Row="1" Name="MainTabControl" SelectionChanged="MainTabControl_SelectionChanged">
            <!-- Tabs will be added dynamically -->
        </TabControl>
    </Grid>
</Window>

