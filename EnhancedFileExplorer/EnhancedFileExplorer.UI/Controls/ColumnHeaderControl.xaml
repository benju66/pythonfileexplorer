<UserControl x:Class="EnhancedFileExplorer.UI.Controls.ColumnHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:EnhancedFileExplorer.UI.Controls">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Name="HeaderGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding Source={x:Static controls:ColumnWidthManager.Instance}, Path=NameWidth}"/>
            <ColumnDefinition Width="{Binding Source={x:Static controls:ColumnWidthManager.Instance}, Path=SizeWidth}"/>
            <ColumnDefinition Width="{Binding Source={x:Static controls:ColumnWidthManager.Instance}, Path=ModifiedWidth}"/>
            <ColumnDefinition Width="{Binding Source={x:Static controls:ColumnWidthManager.Instance}, Path=CreatedWidth}"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,1,1" Padding="5,3">
            <TextBlock Text="Name" FontWeight="Bold" VerticalAlignment="Center"/>
        </Border>
        
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="0,0,1,1" Padding="5,3">
            <TextBlock Text="Size" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Border>
        
        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="0,0,1,1" Padding="5,3">
            <TextBlock Text="Date Modified" FontWeight="Bold" VerticalAlignment="Center"/>
        </Border>
        
        <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="5,3">
            <TextBlock Text="Date Created" FontWeight="Bold" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>

